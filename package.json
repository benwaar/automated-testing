{
  "name": "automated-testing",
  "version": "1.0.0",
  "description": "Playwright, Gherkin, Cucumber &amp; Lighthouse",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:ui": "npx playwright test --ui",
    "test:local": "NODE_ENV=local npx playwright test --headed",
    "test:dev": "NODE_ENV=dev npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:report": "npx playwright show-report",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "cucumber": "npx cucumber-js --config cucumber.config.js",
    "cucumber:html": "npx cucumber-js --config cucumber.config.js --profile html",
    "cucumber:json": "npx cucumber-js --config cucumber.config.js --profile json",
    "test:all": "npm run test && npm run cucumber",
    "test:e2e": "npm run test",
    "test:e2e:headed": "npm run test:headed",
    "test:lighthouse": "npx playwright test src/e2e/keycloak.lighthouse.spec.ts --project=chromium",
    "test:lighthouse:local": "NODE_ENV=local npx playwright test src/e2e/keycloak.lighthouse.spec.ts --project=chromium",
    "test:lighthouse:dev": "NODE_ENV=dev npx playwright test src/e2e/keycloak.lighthouse.spec.ts --project=chromium",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "commitlint:test": "echo 'test: example commit message' | commitlint",
    "commit": "git add . && git commit",
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:src": "prettier --write 'src/**/*.{ts,js,json}' '*.ts' '*.js'",
    "pre-commit": "npm run format:src && npm run lint:check && npm run type-check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benwaar/automated-testing.git"
  },
  "keywords": [
    "BDD",
    "Accessibility",
    "Playwright",
    "Gherkin",
    "Cucumber",
    "Lighthouse"
  ],
  "author": "benwaar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/benwaar/automated-testing/issues"
  },
  "homepage": "https://github.com/benwaar/automated-testing#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^0.22.2",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.0.11",
    "lighthouse": "^12.0.0",
    "playwright-lighthouse": "^4.0.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@cucumber/cucumber": "^12.2.0"
  }
}
